{
  "name": "@broid/irc",
  "version": "1.0.0",
  "main": "lib/core/index.js",
  "license": "AGPL-3.0+",
  "author": "Broid Team <opensource@broid.ai> (https://broid.ai)",
  "description": "Convert IRC messages into Activity Streams 2 with Broid Integration",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/broidHQ/integrations.git"
  },
  "bugs": {
    "url": "https://github.com/broidHQ/integrations/issues"
  },
  "homepage": "https://github.com/broidHQ/integrations/tree/master/broid-irc#readme",
  "keywords": [
    "irc",
    "broid",
    "activity",
    "strams",
    "activity streams 2",
    "messaging",
    "chat",
    "bot"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "test": "npm run lint && npm run build && nyc ava --verbose",
    "build": "npm run clean && npm run copy && tsc",
    "clean": "rm -rf lib && rm -rf typings",
    "copy": "copyfiles -u 1 src/**/*.json lib/",
    "watch": "concurrently --kill-others \"npm run lint:watch\" \"npm run tsc:watch\"",
    "lint": "tslint -c tslint.json src/*",
    "lint:watch": "watch 'tslint -c tslint.json src/*' src",
    "tsc:watch": "tsc --watch",
    "travis": "npm run lint && npm run build && npm run test",
    "release": "npm run travis && npm run build && npm publish --access public"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.37",
    "@types/irc": "^0.3.32",
    "@types/node-uuid": "0.0.28",
    "@types/ramda": "0.0.3",
    "ava": "^0.18.1",
    "concurrently": "^3.1.0",
    "copyfiles": "^1.2.0",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7",
    "tslint": "^4.3.1",
    "tslint-eslint-rules": "^3.2.3",
    "typescript": "^2.1.4",
    "watch": "^1.0.1"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "@broid/schemas": "^1.0.0",
    "@broid/utils": "^1.0.0",
    "irc": "^0.5.2",
    "mimetype": "^0.0.8",
    "node-uuid": "^1.4.7",
    "ramda": "^0.23.0",
    "rxjs": "^5.0.2"
  },
  "ava": {
    "files": [
      "lib/test/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true
  },
  "nyc": {
    "exclude": [
      "dist"
    ]
  }
}
