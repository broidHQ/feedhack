{
  "name": "@broid/slack",
  "version": "1.0.0",
  "main": "lib/core/index.js",
  "license": "AGPL-3.0+",
  "author": "Broid Team <opensource@broid.ai> (https://broid.ai)",
  "description": "Convert Slack messages into Activity Streams 2 with Broid Integration",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/broidHQ/integrations.git"
  },
  "bugs": {
    "url": "https://github.com/broidHQ/integrations/issues"
  },
  "homepage": "https://github.com/broidHQ/integrations/tree/master/broid-slack#readme",
  "keywords": [
    "slack",
    "broid",
    "activity",
    "strams",
    "activity streams 2",
    "messaging",
    "chat",
    "bot"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "build": "npm run clean && typings install && npm run copy && tsc",
    "clean": "rm -rf lib && rm -rf typings",
    "copy": "copyfiles -u 1 src/**/*.json lib/",
    "lint": "tslint -c tslint.json src/*",
    "lint:watch": "watch 'tslint -c tslint.json src/*' src",
    "nsp-check": "nsp check -o summary",
    "prepublish": "npm run test",
    "release": "npm run travis && npm run build && npm publish --access public",
    "test": "npm run lint && npm run nsp-check && npm run build && nyc ava --verbose",
    "travis": "npm run test",
    "tsc:watch": "tsc --watch",
    "watch": "concurrently --kill-others \"npm run lint:watch\" \"npm run tsc:watch\""
  },
  "dependencies": {
    "@slack/client": "^3.8.1",
    "bluebird": "^3.4.7",
    "body-parser": "^1.15.2",
    "@broid/schemas": "^1.0.0",
    "@broid/utils": "^1.0.0",
    "express": "^4.14.0",
    "mimetype": "^0.0.8",
    "node-uuid": "^1.4.7",
    "ramda": "^0.23.0",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "rxjs": "^5.0.2",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "concurrently": "^3.1.0",
    "copyfiles": "^1.0.0",
    "nyc": "^10.1.2",
    "oauth": "^0.9.14",
    "opn": "^4.0.2",
    "tslint": "^4.3.1",
    "tslint-eslint-rules": "^3.2.3",
    "typescript": "^2.1.4",
    "typings": "^2.1.0",
    "watch": "^1.0.1"
  },
  "ava": {
    "files": [
      "lib/test/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true
  },
  "nyc": {
    "exclude": [
      "dist"
    ]
  },
  "bin": {
    "broid-slack": "oauth.js"
  },
  "directories": {
    "test": "test"
  }
}
